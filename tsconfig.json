{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@nano": ["./src/react/components/nano/index.tsx"],
      "@btn": ["./src/react/components/nano/btn/index.tsx"],
      "@layout/*": ["src/react/components/layout/*"],
      "@form": ["./src/react/components/nano/form/index.tsx"],
      "@formSkeleton": ["./src/react/components/form/formSkeleton.tsx"],
      "@fn/*": ["./src/react/functions/*"],
      "@components/*": ["./src/react/components/*"],
      "@redux": ["./src/react/components/state/Redux.tsx"],
      "@tooltip": ["./src/react/components/nano/tooltip/Tooltip.tsx"],
      /* express */
      "@router": ["./src/express/routers/index.ts"],
      "@provider": ["./src/react/components/state/Provider.tsx"],
      /* electron */
      "@electron": ["./src/react/components/electron/index.tsx"],
      "@env": ["./env.ts"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": [
    "**/**/*.ts",
    "src/**/*.ts",
    "src/**/**/*.ts",
    "src/**/*.tsx",
    "src/**/**/*.tsx",
    "src/**/**/**/*.tsx",
    "forge.config.ts",
    "webpack.main.config.ts"
  ],
  "exclude": ["node_modules"]
}
